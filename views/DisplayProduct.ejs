<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Display Products</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

  <style>
    * {
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background: #e0f7fa;
      margin: 0;
      padding: 20px;
    }

    h1 {
      text-align: center;
      color: #00796b;
      margin-bottom: 30px;
      font-size: 28px;
    }

    /* Table styling (adapted to match form container style) */
    table {
      width: 90%;
      margin: 0 auto 40px;
      border-collapse: separate;
      border-spacing: 0;
      background-color: #fff;
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    }

    th, td {
      padding: 16px 20px;
      text-align: center;
      font-size: 14px;
    }

    th {
      background-color: #00acc1;
      color: white;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    tr:nth-child(even) {
      background-color: #f1fdfd;
    }

    tr:hover {
      background-color: #b2ebf2;
      transition: background-color 0.3s ease;
    }

    td {
      font-size: 15px;
      color: #333;
    }

    img {
      max-width: 80px;
      height: auto;
      border-radius: 8px;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
    }

    /* Buttons styled like the Add Product form's submit button */
    .btn {
      display: inline-block;
      padding: 10px 14px;
      border-radius: 8px;
      font-size: 14px;
      font-weight: bold;
      color: white;
      border: none;
      text-decoration: none;
      transition: background-color 0.3s ease;
      margin: 2px;
    }

    .btn-add {
      background-color: #00796b;
    }
    .btn-add:hover {
      background-color: #004d40;
    }

    .btn-edit {
      background-color: #4caf50;
    }
    .btn-edit:hover {
      background-color: #388e3c;
    }

    .btn-delete {
      background-color: #f44336;
    }
    .btn-delete:hover {
      background-color: #c62828;
    }

    .no-data {
      text-align: center;
      font-size: 18px;
      color: #555;
    }

    .top-actions {
      text-align: center;
      margin-bottom: 20px;
    }
  </style>
</head>
<body>

  <h1><i class="fa-solid fa-list"></i> Product List</h1>

  <div class="top-actions">
    <a href="/AddProduct" class="btn btn-add"><i class="fa-solid fa-plus"></i> Add New Product</a>
  </div>

  <% if (data && data.length > 0) { %>
    <table>
      <thead>
        <tr>
          <th>Sr No.</th>
          <th>Product Name</th>
          <th>Product Price (â‚¹)</th>
          <th>Product Description</th>
          <th>Product Image</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach(function(product, index) { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= product.name %></td>
            <td><%= product.price %></td>
            <td><%= product.description %></td>
            <td>
              <% if (product.Upload) { %>
                <img src="/Upload/<%= product.Upload %>" alt="Product Image" />
              <% } else { %>
                No image
              <% } %>
            </td>
            <td>
  <a href="/Edit/<%= product._id %>" class="btn btn-edit">
    <i class="fa-solid fa-pen"></i> Edit
  </a>
  <a href="/delete/<%= product._id %>" class="btn btn-delete"
     onclick="return confirm('Are you sure you want to delete this product?')">
    <i class="fa-solid fa-trash"></i> Delete
  </a>
</td>

          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <p class="no-data">No products found.</p>
  <% } %>

</body>
</html>
